@model IR2S.Admin.Models.ResetPasswordViewModel
@{
    Layout = "~/Views/Shared/_PopupLayout.cshtml";
    ViewBag.Title = "ChangePassword";
}
<div class="row">

    @Html.HiddenFor(model => model.ID)
    <div class="col-xs-12 col-sm-12">
        <div class="box">
            <div class="box-header">
                <div class="box-name">
                    <i class="fa fa-search"></i>
                    <span>@Resource.ChangePassword</span>
                </div>
            </div>
            <div class="no-move"></div>
            <div class="box-content">
                <p class="bg-danger">@Html.ValidationSummary(true)</p>
            </div>
            @using (Html.BeginForm())
            {
                <div class="form-group">
                    @Html.LabelFor(model => model.Password, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(model => model.Password, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.Password)
                    </div>

                </div>
                <div class="form-group">
                    @Html.LabelFor(model => model.ConfirmPassword, new { @class = "col-sm-2 control-label" })
                    <div class="col-sm-4">
                        @Html.PasswordFor(model => model.ConfirmPassword, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.ConfirmPassword)
                    </div>
                </div>
                <div class="clearfix"></div>
                <div class="form-group">
                    <div class="col-sm-2">
                        <button type="submit" class="btn btn-primary btn-label-left">
                            @Resource.Update
                        </button>
                        <a href="~/Users/Profile/@Model.ID" id="close-popup" class="btn btn-primary btn-label-left">
                            @Resource.Cancel
                        </a>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section scripts{
    @Scripts.Render("~/bundles/jqueryval")
    <script type="text/javascript">
        $(document).ready(function () {
            $("#close-popup").click(function () {
                parent.$.fancybox.close();
            });
        });
    </script>
}